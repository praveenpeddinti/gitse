<?xml version="1.0" encoding="utf-8"?>
<metadata>
  <layout title="Map View">
    <message>
      <![CDATA[Show a map on the page]]>
    </message>
  </layout>
  <state>
    <name>Map View</name>
    <description>Show a map on the page</description>
    <config>
      <fields name="params">
        <fieldset name="basic">
          <field
            type="sql"
            name="mapId"
            label="Map to show"
            description=""
            query="SELECT title, id FROM #__maplocations_maps"
            key_field="id" value_field="title">
            <option value="">Choose map</option>
          </field>
        </fieldset>
      </fields>
    </config>
  </state>
</metadata>
