<div class="subhead-collapse" id="ember-toolbar">
  <div class="subhead">
    <div class="container-fluid">
      <div id="container-collapse" class="container-collapse"></div>
      <div class="row-fluid">
        <div class="span12">
          <div class="btn-toolbar" id="toolbar">
            <div class="btn-group" id="toolbar-apply">
              <button {{action "save" target="view"}} class="btn btn-small btn-success">
              <i class="icon-apply icon-white">
              </i>
              Save
              </button>
            </div>

            <div class="btn-group" id="toolbar-save">
              <button {{action "saveAndClose" target="view"}} class="btn btn-small">
              <i class="icon-save ">
              </i>
              Save &amp; Close
              </button>
            </div>

            <div class="btn-group" id="toolbar-save-new">
              <button {{action "saveAndNew" target="view"}} class="btn btn-small">
              <i class="icon-save-new ">
              </i>
              Save &amp; New
              </button>
            </div>

            <div class="btn-group" id="toolbar-cancel">
              <button {{action "transitionToList" target="view"}} class="btn btn-small">
              <i class="icon-arrow-left ">
              </i>
              Back
              </button>
            </div>

            <div class="btn-group divider">
            </div>

            <div class="btn-group" id="toolbar-help">
              <button class="btn btn-small">
              <i class="icon-question-sign">
              </i>
              Help
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{{#if App.message}}
  {{#if App.message.isSuccess}}
    <div id="message-container">
      <div {{bindAttr class=":alert App.message.isSuccess:alert-success App.message.isError:alert-error"}}><strong>{{App.message.title}}</strong> {{App.message.text}}</div>
    </div>
  {{/if}}
{{/if}}

<div class="row js-item-form">
  <div class="span9">
    <div class="form-horizontal well">

      <div class="control-group">
        <label class="control-label" for="js-item-form-title">Title</label>
        <div class="controls">
          {{view Ember.TextField valueBinding="content.title" placeholder="Enter title"}}
        </div>
      </div>

    </div>
  </div>

  <div class="span3">
    <div class="form-horizontal sidebar well">
      <div class="control-group">
        <label class="control-label" for="js-item-form-status">Status</label>
        <div class="controls">
          {{view Ember.Select
            class="input-medium"
            contentBinding="view.selectValues.status"
            optionValuePath="content.value"
            optionLabelPath="content.label"
            valueBinding="controller.content.status"}}
        </div>
      </div>
    </div>
  </div>
</div>
